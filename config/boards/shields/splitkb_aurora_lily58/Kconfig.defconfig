# --- CONFIGURAZIONE LATO LEFT ---
if SHIELD_SPLITKB_AURORA_LILY58_LEFT

config ZMK_KEYBOARD_NAME
    default "Lily58"

# NOTA: Non impostiamo ZMK_SPLIT_ROLE_CENTRAL qui.
# Sarà il build.yaml a decidere se è 'y' (per BLE) o 'n' (per DONGLE).

endif

# --- CONFIGURAZIONE COMUNE SPLIT ---
if SHIELD_SPLITKB_AURORA_LILY58_LEFT || SHIELD_SPLITKB_AURORA_LILY58_RIGHT

config ZMK_SPLIT
    default y

endif

# --- CONFIGURAZIONE DONGLE (YADS o STANDARD) ---
if SHIELD_SPLITKB_AURORA_LILY58_DONGLE

config ZMK_KEYBOARD_NAME
    default "Lily58 Dongle"

config ZMK_SPLIT_ROLE_CENTRAL
    default y

config ZMK_SPLIT
    default y

# Configurazione specifica per gestire due metà come periferiche
config ZMK_SPLIT_BLE_CENTRAL_PERIPHERALS
    default 2 

# Supporto per più connessioni (2 metà + profili BT per PC/Tablet)
config BT_MAX_CONN
    default 6

config BT_MAX_PAIRED
    default 6

endif

# --- ABILITAZIONI MODULARI ---
# Queste configurazioni attivano ZMK Studio e la Shell se non diversamente specificato
config ZMK_STUDIO
    bool
    default y

config ZMK_SETTINGS_SHELL
    bool
    default y